            var _lng = parseFloat(coords[1].substring(0, coords[1].length - 1));
            var pos={lat:_lat,lng:_lng};
            map.setCenter(pos);
        }

        function CreateTooltip(i,type)
        {
            var str="";
            if(type=="Location") {
                var func = 'CenterMap(' + i + ')';
                str+='<div style="position: relative; transition: 5s; hover:">' +
