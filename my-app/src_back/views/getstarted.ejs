<!-- Facebook Initialization -->
<div id="fb-root"></div>
<script>
    FBLogin=function(){
        window.fbAsyncInit = function() {
            FB.init({
                appId            : '420752561660679',
                autoLogAppEvents : true,
                xfbml            : true,
                version          : 'v2.11'
            });
            FB.login(function(response){
                if(response.authResponse)
                {
                    var fb_id;
                    var first_name;
                    var last_name;
                    var friend_list;
                    var FBDetails=new Promise(function(resolve,reject) {
                        window.alert("Welcome");
                        FB.api('/me', function (response) {
                            window.alert(response.name + ' ' +response.id);
                            resolve(response);
                        });
                    });
                    FBDetails.then(function(result)
                    {
                        fb_id=result.id;
                        var name=response.name.split(" ");
                        first_name=name[0];
                        last_name=name[1];
                        $('input[id="fb_id"]').val(fb_id);
                        $('input[id="f_name"]').val(first_name);
                        $('input[id="l_name"]').val(last_name);
                    });
                    var FBFriends=new Promise(function(resolve,reject) {
                        FB.api('/me/friends', function (response) {
                            resolve(response);
                        });
                    });
                    FBFriends.then(function(result)
                    {
                        $('input[id="friend_list"]').val(friend_list);
                        document.getElementById("user_info").submit();
                    });

                    //ADD HERE - INSERT USER TO DB
                }
                else {
                    window.alert("Login cancelled");
                }
            },{scope:'user_friends'});
        };

        (function(d, s, id){
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) {return;}
            js = d.createElement(s); js.id = id;
            js.src = "https://connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk')); }</script>
