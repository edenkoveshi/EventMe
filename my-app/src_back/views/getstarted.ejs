    <style>
        /* The Modal (background) */
        .modal {
            display: none; /* Hidden by default */
            position: fixed; /* Stay in place */
            left: 30%;
            top: 20%;
            text-align: center;
            margin: 0;
            padding: 0;
            width: 60%; /* Full width */
            height: 60%; /* Full height */
            overflow: auto; /* Enable scroll if needed */
            background-color: rgba(0,0,0,0); /* Fallback color */
        }
        /* Modal Content */
        .modal-content {
            background-color: rgba(0,0,0,0);
            margin: auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }

        /* The Close Button */
        .close {
            color: #aaaaaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
